{
    "manifest_version": 3,
    "name": "Facebook Messenger PWA",
    "description": "Convert Facebook Messenger web app to PWA ",
    "version": "1.0",
    "icons": {
        "16": "assets/16x16.png",
        "48": "assets/48x48.png",
        "128": "assets/128x128.png"
    },
    "author": "Daniel Weaver <godismyjudge95@gmail.com>",
    "content_scripts": [
        {
            "matches": [
                "*://www.messenger.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "pwa/pwa-manifest.json",
                "assets/*"
            ],
            "matches": [
                "*://www.messenger.com/*"
            ]
        }
    ]
}
